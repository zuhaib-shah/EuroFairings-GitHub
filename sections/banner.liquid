<div class="custom-banner-section">
  <div class="banner-bg" style="background-image: url({{ section.settings.bg_image | img_url: '2000x' }});">
    <div class="banner-overlay"></div>

    <div class="banner-content">
      <h2>{{ section.settings.heading }}</h2>
      {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-btn">
        {{ section.settings.button_text }}
      </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  
</style>

{% schema %}
{
  "name": "Banner with Overlay",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Banner with Overlay",
      "category": "Custom"
    }
  ]
}
{% endschema %}
